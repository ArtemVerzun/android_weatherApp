<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="sans-serif"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="100sp"
        android:autofillHints=""
        android:backgroundTint="@color/purple_700"
        android:ems="10"
        android:hint="@string/hint_user_tilt"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColorHint"/>
        //android:digits="@string/myAlphaNumeric"/>

    <Button
        android:id="@+id/main_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_field"
        android:layout_marginLeft="70sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/textColorHint"
        android:text="@string/main_btn" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_field"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@+id/main_btn"
        android:backgroundTint="@color/textColorHint"
        android:text="Отмена" />
    <Button
        android:id="@+id/test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/textColorHint"
        android:text="test" />
</RelativeLayout>