<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/info_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65sp"
        android:hint="город"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textColorHint="@color/textColor"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/info_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_city"
        android:layout_marginTop="10sp"
        android:hint="погода"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textColorHint="@color/textColor"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/info_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_weather"
        android:layout_marginTop="5sp"
        android:hint="t"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textColorHint="@color/textColor"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/info_temp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_temp"
        android:layout_marginTop="120sp"
        android:layout_marginLeft="20sp"
        android:hint="ощущается как"
        android:textAlignment="viewStart"
        android:textColor="@color/textColorHint"
        android:textColorHint="@color/textColor"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/info_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_temp2"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:hint="влажность"
        android:textAlignment="viewStart"
        android:textColor="@color/textColorHint"
        android:textColorHint="@color/textColor"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/info_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_humidity"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:hint="скорость ветра"
        android:textAlignment="viewStart"
        android:textColor="@color/textColorHint"
        android:textColorHint="@color/textColor"
        android:textSize="25sp" />

    <Button
        android:id="@+id/search_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_wind"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/textColorHint"
        android:text="Другой город" />


</RelativeLayout>